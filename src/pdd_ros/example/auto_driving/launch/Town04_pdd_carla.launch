<launch>

    <arg name='config_path' default='town04_car'/>

    <node pkg="carla_twist_to_control" type="carla_twist_to_control.py" name="carla_twist_to_control">
      <param name="role_name" value="agent_0"/>
    </node>

    <node pkg="pdd_ros" type="pdd_node.py" name="pdd_node" output="screen">
      <rosparam file="$(find pdd_ros)/example/auto_driving/configure/$(arg config_path)/pdd_carla_config.yaml" command="load" />
      <remap from="pdd_cmd_vel" to="/carla/agent_0/twist"/>
      <remap from="pdd_sub_path" to="/carla/agent_0/waypoints"/>

    </node>

    <node pkg="pdd_ros" type="plot_parameter.py" name="plot">
    </node>

</launch>